<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/volley_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_request"/>
    <Button
        android:id="@+id/volley_request_quque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/request_queue"/>
    <Button
        android:id="@+id/volley_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/singleton_request"/>
    <Button
        android:id="@+id/volley_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/singleton_request"/>
</LinearLayout>